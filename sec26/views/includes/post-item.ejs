<article class="post-item">
  <h2><%= post.title %></h2>
  <p class="post-item-author">By <%= post.author.name %></p>
  <p><%= post.body %></p>
  <div class="post-actions">
    <form action="/posts/delete/<%= post._id %>" method="POST">
      <button class="btn btn-alt">Delete Post</button>
    </form>
    <a href="/posts/edit/<%= post._id %> ">Edit Post</a>
    <a class="btn" href="/posts/view/<%= post._id %> ">View Post</a>
  </div>
</article>